<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="400dp"
        android:layout_height="192dp"
        android:text="이미지" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="3dp">

        <TextView
            android:id="@+id/product_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상품명"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가격" />


        <TextView
            android:id="@+id/product_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="판매자" />

        <TextView
            android:id="@+id/product_reviewCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="리뷰 수" />

        <TextView
            android:id="@+id/product_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="만족도" />

        <TextView
            android:id="@+id/product_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="배송정보" />

        <TextView
            android:id="@+id/product_benefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="고객혜택정보" />

        <TextView
            android:id="@+id/product_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="할인금액정보" />

        <TextView
            android:id="@+id/product_bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="보너스포인트정보" />

        <TextView
            android:id="@+id/product_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="포인트적립정보" />


    </LinearLayout>

</LinearLayout>